{
	"compilerOptions": {
		"module": "NodeNext",
		"noImplicitAny": false,
		"removeComments": false,
		"preserveConstEnums": true,
		"target": "es2020",
		"moduleResolution": "NodeNext",
		"strict": true,
		"noUnusedParameters": false,
		"noUnusedLocals": true,
		"outDir": "out",
		"sourceMap": true,
		"lib": [
			"esnext", // for #201187
			"dom"
		]
	},
	"exclude": ["node_modules"]
}
